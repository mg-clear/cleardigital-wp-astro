---

import Page from "@layouts/Page/Page.astro";
import HeroBanner from "@components/HeroBanner/HeroBanner.astro";
import ClientsView from "@components/Clients/ClientsView.astro";


const clientsQuery = `query ClientsQuery($status: PostStatusEnum = PUBLISH) {
  clients(where: {status: $status}) {
    nodes {
      title
      clientSettings {
        clientLogo {
          altText
          sourceUrl
        }
        clientCaseStudy {
          ... on CaseStudy {
            slug
            databaseId
          }
        }
      }
      industries {
        nodes {
          slug
          parentId
          termTaxonomyId
          parent {
            node {
              termTaxonomyId
            }
          }
        }
      }
    }
  }
}`

---

<Page title="Clients" metadescription="" ogimage="">
  <HeroBanner />
  <ClientsView />
</Page>