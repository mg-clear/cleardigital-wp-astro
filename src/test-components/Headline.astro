---
interface Props {
  tag?: string;
  content: string;
  style?: string;
}

const { content = "", tag = "h2", style = "" } = Astro.props;

---

{
  ()=>{
    switch (tag) {
      case 'h1':
        return <h1 class:list={style} set:html={content} />
      case 'h2':
        return <h2 class:list={style} set:html={content} />
      case 'h3':
        return <h3 class:list={style} set:html={content} />
      case 'h4':
        return <h4 class:list={style} set:html={content} />
      case 'h5':
        return <h5 class:list={style} set:html={content} />
      case 'h6':
        return <h6 class:list={style} set:html={content} />
      default:
        return <h2 class:list={style} set:html={content} />
    }
  }
}

<style lang="scss">
  h1, h2, h3, h4, h5, h6 {
    :global(.underline) {
      color: var(--color-pink);
    }
  }
</style>