<style lang="scss">
	@import 'src/styles/abstracts/variables';

  .colThreeGrid {
    padding-top: calc(var(--component-spacing) * 3);

    .colThreeCards {
      @include row;
      margin-top: calc(var(--flow-space-small) * -1);
    }

    .colThreeCard {
      background-color: var(--color-background);
      border: 1px solid #989898;
      color: var(--color-text);
      display: block;
      height: 100%;
      padding: var(--flow-space-large) var(--flow-space-medium);

      &-outer {
        @include col(12);
        margin-top: var(--flow-space-small);

        @media (min-width: $breakpoint-mobile-horizontal) {
          @include col(6);
        }

        @media (min-width: $breakpoint-tablet-horizontal) {
          @include col(4);
        }
      }

      &-logo {
        margin-bottom: var(--flow-space-small);
        height: 5rem;
        max-width: 5rem;

        @media (min-width: $breakpoint-tablet) {
          height: 7rem;
          max-width: 7rem;
        }

        @media (min-width: $breakpoint-desktop) {
          height: 10rem;
          max-width: 10rem;
        }

        img {
          height: 100%;
          max-width: 100%;
          object-fit: contain;
          width: auto;
        }
      }

      &-button {
        color: var(--color-accent);
      }

      &:hover {
        .colThreeCard-button {
          &::after {
            background-position: right center;
          }
        }
      }
    }
  }

</style>
