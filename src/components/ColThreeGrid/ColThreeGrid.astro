    }
 @media (max-width : $breakpoint-mobile-horizontal){
      max-width: 50px;
      max-height: 50px;
      margin-bottom: 20px;
    }
  }
  h3 {
    color: $color-text;
    font-family: Poppins;
    font-size: 30px;
    font-style: normal;
    font-weight: 700;
    line-height: 1.3;
    margin-bottom: 20px;
  }
  p {
    font-family: Poppins;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 1.5;
    margin-bottom: 30px;
  }
  .link-outer {
    a {
      color: #FA198C;
      font-family: Poppins;
      font-size: 20px;
      font-style: normal;
      font-weight: 700;
      line-height: 1.2;
      padding-right: 23px;
      &:after{
        content: '';
        width: 20px;
        height: 20px;
        position: absolute;
        right: 0;
        top: 3px;
        background-image: url(/themes/hoover/templates/dist/images/astro-image/arow_right.svg);
        background-size: contain;
        background-repeat: no-repeat;
      }
    }
  }
}
</style>

