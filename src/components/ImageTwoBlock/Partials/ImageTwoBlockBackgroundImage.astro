---

interface Props {
	src: string,
}

const { src } = Astro.props;

---

<figure class="figure">
	<img
		class="figure-image lazyload"
		src={src}
		width="800"
		height="1090"
		alt="Background Image"
	/>
</figure>

<style lang="scss">
	.figure {
		height: 100%;
		margin: 0;
		overflow: hidden;
		position: relative;

		.figure-image {
			height: 100%;
			object-fit: cover;
			width: 100%;
		}
	}
</style>