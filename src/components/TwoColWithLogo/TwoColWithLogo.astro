<style lang="scss">
	@import 'src/styles/abstracts/variables';
	@import 'src/styles/abstracts/mixins';

	two-col-with-logo {
		padding-bottom: 0;
		
		.row {
			@include row;
			align-items: center;
		}

		.intro {
			margin-bottom: var(--flow-space-large);
			.subtitle {
				display: inline-block;
				margin-bottom: 2rem;
			}
			&-content-outer {
				@media (min-width: $breakpoint-tablet) {
					@include col(6);
				}
			}

			&-action-outer {
				@media (min-width: $breakpoint-tablet) {
					@include col(6);
				}
			}

			&-action {
				@media (min-width: $breakpoint-tablet) {
					text-align: right;
				}
			}
		}

		.twocolwithlogo {
			border-top: 1px solid var(--color-background-secondary);
			border-bottom: 1px solid var(--color-background-secondary);
			display: flex;
			align-items: center;
			padding: var(--flow-space-small) 0;
			position: relative;
			min-height: calc(var(--blade-view-height) / 3);
			transition: color 0.3s ease-in-out;

			&-item-link {
				cursor: pointer;
				position: absolute;
				inset: 0;
				z-index: 6;
			}

			&-items-outer {
				flex: 0 0 100%;
				position: relative;
				z-index: 2;
			}
	
			&-bg-outer {
				position: absolute;
				inset: 0;
				width: 100%;
				height: 100%;
				overflow: hidden;
			}
	
			&-bg {
				position: absolute;
				inset: 0;
				opacity: 0;
				width: 100%;
				height: 100%;
				display: flex;
				align-items: center;
				transition: opacity 0.3s ease-in-out;
	
				img {
					height: 100%;
					width: 100%;
				}
			}
	
			&-logo-outer {
				@media (min-width: $breakpoint-tablet) {
					@include col(6)
				}
			}
	
			&-logo {
				max-width: 19rem;
				height: 7rem;
				margin-bottom: 3rem;
				width: 100%;
	
				@media (min-width: $breakpoint-tablet) {
					margin-left: 6rem;
					margin-bottom: 0;
				}
	
				img {
					object-fit: contain;
					object-position: left;
					height: 100%;
					width: 100%
				}
			}
	
			&-logo-white {
				display: none;
			}
	
			&-logo-black {
				display: block;
			}
	
			&-content-outer {
				@media (min-width: $breakpoint-tablet) {
					@include col(6)
				}
			}

			&:hover {
				color: var(--color-background);

				.twocolwithlogo-bg {
					opacity: 1 !important;
				}

				.twocolwithlogo-logo-black {
					display: none;
				}

				.twocolwithlogo-logo-white {
					display: block;
				}
			}
		}
	}
</style>

