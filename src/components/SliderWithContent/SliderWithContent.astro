<style lang="scss">
	@import 'src/styles/abstracts/variables';

	[is='flynt-slider-quote'] {
    overflow: hidden;

    .intro {
      margin-bottom: var(--flow-space-medium);
    }

    .testimonials {
      display: flex;
      flex-wrap: nowrap;

      &-slider {
        overflow: visible;
      }
    }

    .testimonial {
      @include row;

      &-outer {
        @include col(12);
      }

      &-image,
      &-statistics {
        @include col(12);
        height: 100%;

        @media (min-width: $breakpoint-tablet-horizontal) {
          @include col(6);
        }
      }

      &-figure,
      &-counter {
        height: 100%;
        margin: 0;

        @media (min-width: $breakpoint-tablet-horizontal) {
          margin-right: calc(((var(--content-max-width-full) - (var(--container-spacing) * 2)) / 12));
        }
      }

      &-figureImage {
        height: 100%;
        object-fit: cover;
        overflow: hidden;
      }

      &-statistics {
        p {
          font-weight: normal;
          margin-top: var(--flow-space);
        }
      }

      &-counterNumber,
      &-counterSuffix {
        color: var(--color-accent);
      }

      &-content {
        @include col;
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin-top: 4rem;
        position: relative;

        @media (min-width: $breakpoint-tablet-horizontal) {
          margin-top: 0;
        }
      }

      &-text {
        border: 0;
        font-style: normal;
        margin: 0;
        padding: 0;
      }

      &-author {
        color: var(--color-accent);
        margin-top: var(--flow-space-medium);
      }

      &-author-logo {
        height: 2.2rem;
        margin-top: var(--flow-space);
        max-width: 15.7rem;

        img {
          height: 100%;
          object-fit: contain;
        }
      }

      &-link {
        margin-top: var(--flow-space-small);
      }

      &-sliderArrow {
        &--prev,
        &--next {
          background-color: $color-background-dark;
        }
      }

      &-sliderProgressbar {
        margin-top: var(--flow-space-large);
      }
    }

    .logos {
      margin-top: var(--flow-space-large);
      position: relative;
      --gradient-fade-size: 25%;

      &::before {
        content: '';
        position: absolute;
        width: var(--gradient-fade-size);
        background-image: linear-gradient(to right, rgba(0,0,0,1), rgba(0,0,0,0));
        top: 0;
        bottom: 0;
        left: 0;
        height: 100%;
        z-index: 2;
      }

      &::after {
        content: '';
        position: absolute;
        width: var(--gradient-fade-size);
        background: linear-gradient(to left, rgba(0,0,0,1), rgba(0,0,0,0));
        top: 0;
        bottom: 0;
        right: 0;
        height: 100%;
        z-index: 2;
      }

      &-list {
        @include reset-list;
        // @include row;
        display: inline-flex;
        flex-wrap: nowrap;
        z-index: 1;
        // @include row-cols(2);

        // @media (min-width: $breakpoint-tablet) {
        //   @include row-cols(3);
        // }

        // @media (min-width: $breakpoint-tablet) {
        //   @include row-cols(4);
        // }

        // @media (min-width: $breakpoint-tablet) {
        //   @include row-cols(5);
        // }
      }

      .swiper-wrapper {
        transition-timing-function: linear;
      }
    }

    .logo {
      height: 8.4rem;
      margin: auto;
      max-width: 19.3rem;
      text-align: center;

      &-image {
        height: 100%;
        object-fit: contain;
      }
    }
  }
</style>
<script>
  import Swiper from 'swiper';
	import { Navigation, A11y, Autoplay, Pagination } from 'swiper/modules'
	import 'swiper/css'
	import 'swiper/css/autoplay'
  import 'swiper/css/a11y'
	import 'swiper/css/navigation'

	const sliderSelector = '[is="flynt-slider-quote"]  .swiper';
	const slider = document.querySelector(sliderSelector);

	if (slider) {
		const parameters = {
			modules: [Navigation, A11y, Autoplay, Pagination],
      autoHeight: true,
			navigation: {
				nextEl: '[is="flynt-slider-quote"] .swiper-button-next',
				prevEl: '[is="flynt-slider-quote"] .swiper-button-prev'
			},
      pagination: {
        el: '[is="flynt-slider-quote"]  .swiper-pagination',
        type: 'progressbar' as 'progressbar'
      },
			slidesPerView: 1,
			speed: 400,
			spaceBetween: 30
		}
		
		const swiper = new Swiper(sliderSelector, parameters)
	}

  const logoSliderSelector = '[is="flynt-slider-quote"]  .swiperLogos';
	const logoSlider = document.querySelector(logoSliderSelector);
  const countLogos = document.querySelectorAll('[is="flynt-slider-quote"]  .swiperLogos .logos-item.swiper-slide').length;

	if (logoSlider) {
		const logoParameters = {
      modules: [Autoplay],
			autoplay: {
        delay: 0
      },
      loop: true,
			slidesPerView: 2,
			spaceBetween: 20,
      speed: 2000,
      breakpoints: {
        576: {
          slidesPerView: 3,
        },
        768: {
          slidesPerView: 4,
        },
        992: {
          slidesPerView: 5,
        },
        1200: {
          slidesPerView: 6,
        }
      }
		}
		
		const logoSwiper = new Swiper(logoSliderSelector, logoParameters)
	}
</script>