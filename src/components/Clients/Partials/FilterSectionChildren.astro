---

import FilterTerm from "./FilterTerm.astro";

interface Props {
    taxonomy: string,
    children: {
        label: string,
        termId: string,
        slug: string,
    }[],
}

const { taxonomy, children } = Astro.props

---

<div class="child-terms">
    {
        children.map((term)=>{
            return <FilterTerm {...{taxonomy, ...term}} />
        })
    }
</div>

<style lang="scss">
    .child-terms {
        margin-block-start: var(--padding-unit-10);
        margin-inline-start: calc(2.5rem + var(--padding-unit-20));
        display: flex;
        flex-direction: column;
    }
</style>