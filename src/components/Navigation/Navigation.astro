<style lang="scss">
  @import "@styles/abstracts/_variables.scss";

  .main-navigation {
    $self: &;
    background-color: transparent;
    min-height: 0;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 40;

    // @media (max-width: $breakpoint-tablet-horizontal) {
    //   display: none;
    // }

    > .container {
			&:before {
				content: "";
				background-color: $color-background;
				height: 100%;
				left: -94%;
				width: 100%;
				position: absolute;
				z-index: -1;
				@media (max-width: $breakpoint-desktop) and (min-width: $breakpoint-tablet-horizontal) {
					left: 95.7%
				}
			}

			&:after {
				content: "";
				background-color: $color-background;
				height: 100%;
				right: -94%;
				width: 100%;
				position: absolute;
				top: 0;
				z-index: -1;

				@media (max-width: $breakpoint-desktop) and (min-width: $breakpoint-tablet-horizontal) {
					right: 95.7%
				}
			}
      @media (min-width: $breakpoint-desktop) {
        position: static !important;
      }
    }

    .main-navigation {
      &-items {
        align-items: center;
        display: flex;
        // position: relative;

        @media (max-width: $breakpoint-tablet-horizontal) {
          justify-content: space-between;
					padding: 3rem 0;
        }
      }
    }

		.side-bg {
			background-color: $color-background;
			height: 100%;
			width: 42%;
			position: absolute;
			top: 0;

			&--left {
				left: -40%;
			}

			&--right {
				right: -40%;
			}
		}

    .main-menu {
      display: flex;
      margin: 0;

      &-item {
        margin-left: 5rem;
        padding: 4rem 0;

        > a {
          color: $color-text;
          font-weight: 700;
					position: relative;
          text-decoration: none;

					&:after {
						background-color: $color-brand;
						bottom: -206%;
						content: '';
						width: 0;
						height: 8px;
						left: 0;
						position: absolute;
						transition: width 0.3s ease-in-out;
						z-index: 21;
					}

          &:hover {
            color: $color-brand;
          }
        }

        &:hover {
          .megamenu-dropdown {
            height: 44rem;
          }

					> a {
						&:after {
							width: 100%;
						}
					} 
        }
      }

      &-action {
        margin-left: 5rem;
				margin-top: 0;
      }
    }

    .site-logo {
      height: 3.5rem;
      max-width: 11.1rem;
      width: 100%;
      position: relative;

      &::before {
        background-color: $color-background;
        content: "";
        width: 100%;
        height: 94%;
        right: 0;
        bottom: -98%;
        position: absolute;
      }

      &::after {
        background-color: $color-background;
        content: "";
        width: 100%;
        height: 100%;
        left: 0;
        top: -100%;
        position: absolute;
      }

      > a {
        display: inline-block;
        margin-left: -1px;
        margin-right: -1px;
        width: calc(100% + 2px);
      }

      img {
        height: 100%;
        object-fit: contain;
      }
    }

    nav {
      align-items: center;
      background-color: $color-background;
      display: flex;
      flex-basis: calc(100% - 11.1rem);
      justify-content: flex-end;
      max-width: calc(100% - 11.1rem);

      @media (max-width: $breakpoint-tablet-horizontal) {
        background: $color-background;
        display: none;
        flex: 0 0 100%;
        height: 100vh;
        left: 0;
        max-width: 100%;
        overflow-y: auto;
        padding-bottom: 10rem;
        padding-inline: 1rem;
        position: absolute;
        right: 0;
        top: 9.5rem;
        width: 100%;
      }
    }

    ul {
      list-style: none;
      margin-bottom: 0;
      padding-left: 0;
    }

    .megamenu {
      &-items {
        @include row;
        padding: 1.5rem 0 3rem;

        @media (min-width: $breakpoint-tablet-horizontal) {
          padding: 6rem 0;
        }
      }

      &-dropdown {
        background-color: $color-background;
        position: relative;
        width: 100%;

        @media (min-width: $breakpoint-tablet-horizontal) {
					border-top: 1px solid $color-background-light;
          height: 0;
          left: 0;
          overflow: hidden;
          position: absolute;
          top: 100%;
          transition: height 0.5s ease;
          z-index: 20;
        }

        @media (max-width: $breakpoint-tablet-horizontal) {
          animation: fadeIn 0.2s ease-in-out;
          display: none;
        }
      }

      &-content-outer {
        @include col(12);

        @media (min-width: $breakpoint-tablet-horizontal) {
          @include col(6);
        }
      }

      &-content {
        max-width: 45rem;

        > h2 {
          margin-bottom: 2rem;

          @media (max-width: $breakpoint-tablet-horizontal) {
            display: none;
          }
        }
      }

      &-link-lists-outer {
        @include col(12);

        @media (min-width: $breakpoint-tablet-horizontal) {
          @include col(6);
        }
      }

      &-links-outer {
        @include row;
      }

      &-links {
        @include col(12);

        @media (min-width: $breakpoint-mobile-horizontal) {
          @include col(6);
        }

        ul {
          li {
            @media (max-width: $breakpoint-tablet) {
              margin-top: 3rem;
            }

            &:not(:first-child) {
              @media (min-width: $breakpoint-tablet) {
                margin-top: 3rem;
              }
            }
          }

          a {
            color: $color-background-dark;
            font-weight: 700;
            text-decoration: none;
            transition: color 0.3s ease-in-out;

            &:hover {
              color: $color-accent;
            }
          }
        }
      }

      &-action {
        margin-top: 3rem;
      }

      &--isOpen {
        display: block;
        opacity: 1;
        transform: scaleY(1);
        visibility: visible;
      }
    }

    .hamburger {
      display: block;
      position: relative;

      @media (min-width: $breakpoint-tablet-horizontal) {
        display: none;
      }

      span {
        background-color: $color-background-dark;
        border-radius: 0.3rem;
        display: block;
        height: 0.3rem;
        margin-bottom: 0.5rem;
        position: relative;
        transform-origin: 0.4rem 0;
        transition:
          transform 0.5s cubic-bezier(0.77, 0.2, 0.05, 1),
          background-color 0.5s cubic-bezier(0.77, 0.2, 0.05, 1),
          opacity 0.55s ease;
        width: 3rem;
        z-index: 1;

        @media (max-width: $breakpoint-mobile-horizontal) {
          height: 0.25rem;
          margin-bottom: 0.35rem;
          width: 2.4rem;
        }

        &:first-child {
          transform-origin: 0% 0%;
        }

        &:nth-child(2) {
          transform-origin: 0% 100%;
        }

        &:last-child {
          margin-bottom: 0;
        }
      }

      &.active {
        span {
          &:first-child {
            transform: rotate(45deg) translate(0.1rem, -0.4rem);
          }

          &:nth-child(2) {
            opacity: 0;
            transform: scaleY(0);
          }

          &:nth-child(3) {
            transform: rotate(-45deg);
          }
        }
      }
    }

    &.main-navigation--active {
      background-color: $color-background;
      color: $color-background-dark;

      .site-logo {
        &-white {
          display: none;
        }

        &-black {
          display: block;
        }
      }

      nav {
        @media (max-width: $breakpoint-tablet-horizontal) {
          border-top: 0.1rem solid $color-background-light;
        }
      }

      .megamenu {
        @media (min-width: $breakpoint-tablet-horizontal) {
          border-top: 0.1rem solid $color-background-light;
        }
      }

      .main-menu-item {
        > a {
          color: $color-background-dark;

          &:hover {
            color: $color-brand;
          }
        }
      }

      .hamburger {
        span {
          background-color: $color-background-dark;
        }
      }
    }

    &.main-navigation--hide {
      top: -9.5rem;

      @media (min-width: $breakpoint-tablet-horizontal) {
        top: -12.8rem;
      }
    }
  }
</style>
