<script>
  const hamburger = document.querySelector('header .hamburger');
  const nav = document.querySelector('header nav');
  const mainMenuLink = document.querySelectorAll('header .main-menu-item-inner');
  const megaMenuDropdown = document.querySelectorAll('header .megamenu-dropdown');
  const header = document.querySelector('header.main-navigation');

  function initMenu() {
    if (screen.availWidth > 992) {
      nav.classList.remove('active');
      hamburger.classList.remove('active');

      mainMenuLink.forEach(function (item) {
        item.closest('.main-menu-item').classList.remove('main-menu--active');
        item.closest('.main-menu-item').querySelector('.megamenu-dropdown').removeAttribute('style');
      });
    }
  }

  function mobileMenuHandler() {
    let element = this;

    if (element) {
      element.classList.toggle('active');
      nav.classList.toggle('active');
    }
  }

  function handleHeaderScroll() {
    if (window.scrollY > 0) {
      header.classList.add('main-navigation-isScrolled');
    } else {
      header.classList.remove('main-navigation-isScrolled');
    }
  }

  function menuLinkClickHandler(e) {
    let winWidth = screen.availWidth;

    if (winWidth > 992) return;

    const closestCollapse = e.target.closest('.main-menu-item').querySelector('.megamenu-dropdown');

    megaMenuDropdown.forEach((collapse) => {
      if (collapse !== closestCollapse) {
        slideUp(collapse);
      }
    });

    if (closestCollapse.classList.contains('show')) {
      slideUp(closestCollapse);
    } else {
      slideDown(closestCollapse);
    }
  }

  function slideDown(collapse) {
    collapse.classList.add('show');
    collapse.classList.add('collapsing');
    collapse.style.height = `${collapse.scrollHeight}px`;

    collapse.closest('.main-menu-item').classList.add('main-menu--active');

    setTimeout(() => {
      collapse.classList.remove('collapsing');
    }, 350);
  }

  function slideUp(collapse) {
    collapse.classList.add('collapsing');
    collapse.removeAttribute('style');

    collapse.closest('.main-menu-item').classList.remove('main-menu--active');

    setTimeout(() => {
      collapse.classList.remove('collapsing');
      collapse.classList.remove('show');
    }, 350);
  }

  hamburger.addEventListener('click', mobileMenuHandler);
  window.addEventListener('resize', initMenu);
  window.addEventListener('scroll', handleHeaderScroll);

  mainMenuLink.forEach(function (item) {
    item.addEventListener('click', menuLinkClickHandler);
  });
</script>
