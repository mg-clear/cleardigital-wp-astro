  @import '@styles/abstracts/_variables.scss';

  .main-navigation {
    $self: &;
    background-color: transparent;
    min-height: 0;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 40;
    --header-background-color: transparent;
    --header-top-link-color: var(--color-white);
    --header-hamburger-color: var(--color-white);
    --header-color-transition: background-color 0.3s ease-in-out;

    > .container {
      &:before {
        content: '';
        background-color: var(--header-background-color);
        transition: var(--header-color-transition);
        height: 100%;
        left: 0;
        width: max(
          calc(0.5 * (100% - var(--content-width)) - var(--container-spacing)),
          var(--container-spacing)
        );
        position: absolute;
        z-index: -1;
        @media (max-width: $breakpoint-desktop) and (min-width: $breakpoint-tablet-horizontal) {
          left: 95.7%;
        }

        @media (min-width: $breakpoint-tablet) and (max-width: $breakpoint-tablet-horizontal) {
          left: 17.8rem;
          width: 100%;
        }

        @media (max-width: $breakpoint-tablet - 1px) {
          left: 12rem;
          width: 100%;
        }
      }

      &:after {
        content: '';
        background-color: var(--header-background-color);
        transition: var(--header-color-transition);
        height: 100%;
        right: 0;
        width: max(
          calc(0.5 * (100% - var(--content-width)) - var(--container-spacing)),
          var(--container-spacing)
        );
        position: absolute;
        top: 0;
        z-index: -1;

        @media (max-width: $breakpoint-desktop) and (min-width: $breakpoint-tablet-horizontal) {
          right: 95.7%;
        }

        @media (min-width: $breakpoint-tablet) and (max-width: $breakpoint-tablet-horizontal) {
          right: calc(100% - 6.8rem);
        }

        @media (max-width: $breakpoint-tablet - 1px) {
          right: calc(100% - 1.6rem);
        }
      }
      @media (min-width: $breakpoint-desktop) {
        position: static !important;
      }
    }

    .clear-logo-vector {
      --color-vector-fill-background: rgba(255, 255, 255, 0);
      --color-vector-fill-clear: #fff;
